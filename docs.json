{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Andi AI Search API Docs",
  "colors": {
    "primary": "#3B75FA",
    "light": "#4A9FFF",
    "dark": "#2D5FD4"
  },
  "background": {
    "decoration": "gradient"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "getting-started/quickstart",
              "getting-started/authentication"
            ]
          },
          {
            "group": "Search",
            "pages": [
              "search/fast-search",
              "search/deep-search",
              "search/content-retrieval"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "features/query-parameters",
              "features/query-operators",
              "features/filtering",
              "features/response-format"
            ]
          },
          {
            "group": "Resources",
            "pages": [
              "resources/error-handling",
              "resources/rate-limits"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoints",
            "openapi": "api-reference/openapi.json"
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Andi",
          "href": "https://andiai.com",
          "icon": "globe"
        },
        {
          "anchor": "API Console",
          "href": "https://console.andiai.com",
          "icon": "terminal"
        },
        {
          "anchor": "Andi Search",
          "href": "https://andisearch.com",
          "icon": "magnifying-glass"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hello+api@andiai.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "API Console",
      "href": "https://console.andiai.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/andi_search",
      "linkedin": "https://linkedin.com/company/andisearch",
      "github": "https://github.com/andisearch",
      "discord": "https://discord.gg/J2NJ2rj7ax"
    }
  },
  "seo": {
    "metatags": {
      "og:site_name": "Andi AI Search API Docs",
      "og:image": "https://docs.andiai.com/images/og-default.png",
      "twitter:site": "@andi_search"
    }
  },
  "api": {
    "playground": {
      "mode": "simple"
    },
    "request": {
      "example": {
        "languages": ["curl", "python", "javascript", "go", "ruby", "php"]
      }
    }
  }
}
